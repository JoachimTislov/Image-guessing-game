@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="text-center">
	<h1>@ViewData["Title"]</h1>
	<form method="post" class="mt-5">
		<div class="container">
			<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
					<div class="form-floating">
						<input type="username" asp-for="Username" class="form-control" id="floatingUsername" placeholder="username" />
						<label for="floatingUsername">Username</label>
					</div>
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>
			</div>
			<br/>
			<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
					<div class="form-floating">

						<input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="password" />
						<label for="floatingPassword">Password</label>
					</div>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
			</div>
			<br/>
			<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
					<div class="form-floating">

						<input asp-for="ConfirmPassword" type="password" class="form-control" id="reEnterPassword" placeholder="password" />
						<label for="reEnterPassword">Re-Enter Password</label>
					</div>
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
			</div>
		</div>

		<p></p>
		<button type="submit" class="btn btn-secondary">Register</button>
		@foreach (var error in Model.Errors)
		{
			<div class="row mt-5">
				<div class="col-md-4"></div>
				<div class="alert alert-danger col-md-4">
					@error.Description
				</div>
				<div class="col-md-4"></div>
			</div>
		}
	</form>
</div>
